{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"files": {
		"includes": [
			"**/src/*.json",
			"**/src/*.js",
			"**/src/*.ts",
			"**/src/*.jsx",
			"**/src/*.tsx",
			"**/src/*.css"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 80
	},
	"css": {
		"parser": {
			"cssModules": true
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnusedVariables": "warn"
			}
		}
	}
}
