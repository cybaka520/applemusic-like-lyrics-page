{
	"name": "@applemusic-like-lyrics/react-full",
	"version": "0.2.0-alpha.2",
	"description": "AMLL 组件库的 React 绑定，但是更加完备且高度灵活",
	"repository": {
		"url": "https://github.com/Steve-xmh/applemusic-like-lyrics.git",
		"directory": "packages/react-full",
		"type": "git"
	},
	"type": "module",
	"license": "GPL-3.0",
	"main": "dist/amll-react-framework.cjs",
	"module": "./dist/amll-react-framework.js",
	"typings": "./dist/index.d.ts",
	"style": "./dist/amll-react-framework.css",
	"exports": {
		".": {
			"import": "./dist/amll-react-framework.js",
			"require": "./dist/amll-react-framework.cjs",
			"types": "./dist/index.d.ts"
		},
		"./style.css": {
			"import": "./dist/amll-react-framework.css",
			"require": "./dist/amll-react-framework.css"
		}
	},
	"sideEffects": [
		"*.css"
	],
	"files": [
		"dist/**/*.js",
		"dist/**/*.ts",
		"dist/**/*.cjs",
		"dist/**/*.css",
		"dist/**/*.map"
	],
	"scripts": {
		"build:docs": "typedoc --plugin typedoc-plugin-markdown --out docs src/index.ts",
		"build": "vite build",
		"build:dev": "vite build",
		"fmt": "biome format --write ./src",
		"dev": "vite dev",
		"preinstall": "npx only-allow pnpm"
	},
	"dependencies": {
		"@applemusic-like-lyrics/core": "workspace:^",
		"@applemusic-like-lyrics/react": "workspace:^",
		"@tauri-apps/api": "^2.6.0",
		"@ungap/structured-clone": "^1.3.0",
		"classnames": "^2.5.1",
		"corner-smoothing": "^0.1.5",
		"framer-motion": "^12.5.0",
		"react-toastify": "^11.0.5"
	},
	"peerDependencies": {
		"jotai": "^2.0.0",
		"react": "^19.0.0",
		"react-dom": "^19.0.0"
	},
	"devDependencies": {
		"@applemusic-like-lyrics/lyric": "workspace:^",
		"@biomejs/biome": "^1.9.4",
		"@pixi/app": "^7.4.3",
		"@pixi/core": "^7.4.3",
		"@pixi/display": "^7.4.3",
		"@pixi/filter-blur": "^7.4.3",
		"@pixi/filter-color-matrix": "^7.4.3",
		"@pixi/sprite": "^7.4.3",
		"@radix-ui/themes": "^3.2.1",
		"@types/react": "^19.0.12",
		"@types/react-dom": "^19.0.4",
		"@types/ungap__structured-clone": "^1.2.0",
		"@vitejs/plugin-react": "^4.3.4",
		"babel-plugin-react-compiler": "19.0.0-beta-aeaed83-20250323",
		"react-compiler-runtime": "19.0.0-beta-aeaed83-20250323",
		"typedoc": "^0.28.1",
		"typedoc-plugin-markdown": "^4.6.0",
		"typescript": "^5.8.2",
		"vite": "^6.2.3",
		"vite-plugin-dts": "^4.5.3",
		"vite-plugin-svgr": "^4.3.0",
		"vite-plugin-wasm": "^3.4.1"
	}
}