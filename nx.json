{
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": [
          "build:dev",
          "build"
        ]
      }
    }
  },
  "targetDefaults": {
    "fmt": {
      "cache": true,
      "outputs": [
        "{projectRoot}/src"
      ]
    },
    "build": {
      "cache": true,
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "{projectRoot}/dist",
        "{projectRoot}/pkg"
      ]
    },
    "build:dev": {
      "cache": true,
      "dependsOn": [
        "^build:dev"
      ],
      "outputs": [
        "{projectRoot}/dist",
        "{projectRoot}/pkg"
      ]
    }
  }
}